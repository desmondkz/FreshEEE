<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:srcCompat="@mipmap/fresheee_icon_foreground"-->
<!--        android:layout_marginStart="280dp"-->
<!--        android:layout_marginTop="5dp"/>-->

</RelativeLayout>